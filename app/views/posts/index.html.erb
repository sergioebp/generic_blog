<h4 class="d-flex justify-content-between mb-4">
  <span>Posts</span>
  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
</h4>

<% @posts.each do |post| %>
  <div class="">
    <% if current_author == post.author %>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
    <% end %>
  </div>
  <%= link_to post_path(post), class: 'text-decoration-none' do %>
    <div class="card mb-3 post-card">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <% if post.header_image.present? %>
              <div class="header-img" style="background-image: url(<%= url_for(post.header_image) %>);"></div>
            <% end %>
          </div>
          <div class="col-10">
            <h5 class="card-title mb-1 text-dark"> <%= post.title %> </h5>
            <p class='text-secondary mb-0'> <%= post.description %></p>
            <% if post.author.name.present? %>
              <p class='text-secondary mb-0'> Posted by <%= post.author.name %></p>
            <% end %>
            <p class='text-secondary mb-0'> <%= post.rates.size %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
